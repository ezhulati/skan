<style>
  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    z-index: 9999;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease-in-out;
  }

  .mobile-menu-overlay.open {
    opacity: 1;
    visibility: visible;
  }

  .mobile-menu {
    position: fixed;
    top: 0;
    right: 0;
    width: 320px;
    max-width: 85vw;
    height: 100vh;
    background: white;
    box-shadow: -4px 0 20px rgba(0, 0, 0, 0.15);
    transform: translateX(100%);
    transition: transform 0.3s ease-in-out;
    overflow-y: auto;
    z-index: 10000;
  }

  .mobile-menu-overlay.open .mobile-menu {
    transform: translateX(0);
  }

  .mobile-menu-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid #e5e7eb;
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  }

  .mobile-menu-close {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 8px;
    background: white;
    border: 1px solid #e5e7eb;
    color: #6b7280;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .mobile-menu-close:hover {
    background: #f3f4f6;
    color: #374151;
    border-color: #d1d5db;
  }

  .mobile-menu-nav {
    padding: 1.5rem;
  }

  .mobile-menu-section {
    margin-bottom: 2rem;
  }

  .mobile-menu-section:last-child {
    margin-bottom: 0;
  }

  .mobile-menu-item {
    display: block;
    padding: 1rem;
    margin-bottom: 0.5rem;
    color: #374151;
    text-decoration: none;
    font-weight: 500;
    font-size: 1.1rem;
    border-radius: 12px;
    background: #f8fafc;
    border: 1px solid transparent;
    transition: all 0.2s ease;
    position: relative;
    overflow: hidden;
  }

  .mobile-menu-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.1), transparent);
    transition: left 0.5s ease;
  }

  .mobile-menu-item:hover::before {
    left: 100%;
  }

  .mobile-menu-item:hover {
    background: #eff6ff;
    border-color: rgba(59, 130, 246, 0.2);
    color: #1e40af;
    transform: translateX(4px);
  }

  .mobile-menu-cta {
    display: block;
    padding: 1.25rem;
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    color: white;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    border-radius: 12px;
    text-align: center;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
  }

  .mobile-menu-cta:hover {
    transform: translateY(-2px) scale(1.02);
    box-shadow: 0 6px 20px rgba(59, 130, 246, 0.5);
    background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);
  }

  .mobile-menu-language {
    padding: 1rem;
    background: #f8fafc;
    border-radius: 12px;
    border: 1px solid #e5e7eb;
  }

  .language-btn {
    padding: 0.5rem 1rem;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    background: white;
    color: #6b7280;
    font-size: 0.9rem;
    font-weight: 500;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .language-btn:hover {
    background: #f3f4f6;
    border-color: #d1d5db;
  }

  .language-btn.active {
    background: #3b82f6;
    color: white;
    border-color: #3b82f6;
  }

  /* Prevent body scroll when menu is open */
  body.mobile-menu-open {
    overflow: hidden;
  }

  /* Animation delays for staggered effect */
  .mobile-menu-section:nth-child(1) .mobile-menu-item {
    animation: slideInRight 0.3s ease-out 0.1s both;
  }

  .mobile-menu-section:nth-child(2) .mobile-menu-item {
    animation: slideInRight 0.3s ease-out 0.2s both;
  }

  .mobile-menu-section:nth-child(3) {
    animation: slideInRight 0.3s ease-out 0.3s both;
  }

  .mobile-menu-section:nth-child(4) {
    animation: slideInRight 0.3s ease-out 0.4s both;
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 480px) {
    .mobile-menu {
      width: 100vw;
      max-width: 100vw;
    }
    
    .mobile-menu-header {
      padding: 1rem;
    }
    
    .mobile-menu-nav {
      padding: 1rem;
    }
  }
</style>

<script>
  function initializeMobileMenu() {
    const overlay = document.getElementById('mobile-menu-overlay');
    const closeBtn = document.getElementById('mobile-menu-close');
    const body = document.body;

    // Close menu function
    function closeMenu() {
      if (overlay) {
        overlay.classList.remove('open');
        body.classList.remove('mobile-menu-open');
      }
      
      // Reset hamburger button to normal state
      const hamburger = document.getElementById('mobile-hamburger');
      if (hamburger) {
        hamburger.classList.remove('active');
      }
    }

    // Close menu on overlay click
    if (overlay) {
      overlay.addEventListener('click', (e) => {
        if (e.target === overlay) {
          closeMenu();
        }
      });
    }

    // Close menu on close button click
    if (closeBtn) {
      closeBtn.addEventListener('click', closeMenu);
    }

    // Close menu on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeMenu();
      }
    });

    // Language switcher functionality - use global switchLanguage function
    const languageBtns = document.querySelectorAll('.language-btn');
    languageBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        languageBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        const lang = btn.dataset.lang;
        // Use the global switchLanguage function from LanguageSwitcher component
        if (typeof (window as any).switchLanguage === 'function') {
          (window as any).switchLanguage(lang);
        }
      });
    });

    // Menu item click handler (close menu after navigation)
    const menuItems = document.querySelectorAll('.mobile-menu-item, .mobile-menu-cta');
    menuItems.forEach(item => {
      item.addEventListener('click', () => {
        // Add a small delay to show the click effect
        setTimeout(closeMenu, 150);
      });
    });
  }

  // Global function to open menu (called from hamburger button)
  function openMobileMenu() {
    const overlay = document.getElementById('mobile-menu-overlay');
    const body = document.body;
    
    if (overlay) {
      overlay.classList.add('open');
      body.classList.add('mobile-menu-open');
      
      // Sync mobile language buttons with current language
      syncMobileLanguageButtons();
    }
  }

  // Function to sync mobile language buttons with current language
  function syncMobileLanguageButtons() {
    const currentLang = localStorage.getItem('preferredLanguage') || 'sq';
    const languageBtns = document.querySelectorAll('.language-btn');
    
    languageBtns.forEach(btn => {
      btn.classList.remove('active');
      if (btn.dataset.lang === currentLang) {
        btn.classList.add('active');
      }
    });
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', initializeMobileMenu);

  // Re-initialize after page transitions (for SPA navigation)
  document.addEventListener('swup:contentReplaced', initializeMobileMenu);

  // Make function globally available
  window.openMobileMenu = openMobileMenu;
</script>