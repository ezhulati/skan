        </div>
      </div>
    </div>
    
    <!-- Mobile menu -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-white border-t border-gray-100">
        <a href="/features" class="text-gray-600 hover:text-gray-900 block px-6 py-4 text-base font-medium" data-sq="Veçoritë" data-en="Features">Veçoritë</a>
