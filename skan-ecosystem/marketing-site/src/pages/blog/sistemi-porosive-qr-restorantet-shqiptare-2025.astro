---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = "Sistemi QR për Restorantet Shqiptare 2025 | SKAN.AL";
const description = "Udhëzues për implementimin e sistemeve QR në restorantet shqiptare. Zbuloni përfitimet, kostot dhe hapat për të rritur fitimet.";
const publishDate = "2025-01-15";
const author = "Ervin Shehu";
---

<BaseLayout 
  title={title}
  description={description}
  ogTitle="Sistemi i Porosive QR për Restorantet Shqiptare 2025 | SKAN.AL"
  ogDescription={description}
  ogImage="https://skan.al/skan_al_people.jpg"
>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <header class="mb-8">
      <div class="mb-6">
        <div class="flex items-center space-x-2 text-sm text-gray-600">
          <a href="/" class="hover:text-blue-600 transition-colors">Kryefaqja</a>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
