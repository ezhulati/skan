// Language switching functionality
document.addEventListener('DOMContentLoaded', function() {
  const languageToggle = document.querySelector('.language-toggle');
  let currentLang = 'sq'; // Default to Albanian
  
  if (languageToggle) {
    languageToggle.addEventListener('click', function() {
      currentLang = currentLang === 'sq' ? 'en' : 'sq';
      
      // Update all elements with language data attributes
      document.querySelectorAll('[data-sq][data-en]').forEach(element => {
        if (currentLang === 'en') {
          element.textContent = element.getAttribute('data-en');
        } else {
          element.textContent = element.getAttribute('data-sq');
        }
      });
      
      // Update button text
      languageToggle.textContent = currentLang === 'sq' ? 'EN' : 'SQ';
    });
  }
});
</script>